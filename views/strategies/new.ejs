<% layout('/layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Strategy</h1>
  <div class="col-6 offset-3">
    <form action="/strategies" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="name">New Strat Name</label>
        <input class="form-control" type="text" id="name" name="strategy[name]" required>
        <div class="valid-feedback"> Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="map">Map</label>
        <select class="form-select" name="strategy[map]" id="map">
          <option value=""> </option>
          <% for(let map of maps){ %> 
            <option value="<%= map %>"><%=map %> </option>
          <% } %> 
        </select>
        <div class="valid-feedback"> Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="strategy[description]" required></textarea>
        <div class="valid-feedback"> Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="number">How many players?</label>
        <input class="form-control" type="number" id="number" name="strategy[number]" required min="1" max="5">
        <div class="valid-feedback"> Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Strategy</button>
      </div>
    </form>
    <a href="/strategies">All strategies</a>
    
  </div>
</div>

